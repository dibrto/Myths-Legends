{{!-- {{setTitle "Register Page"}} --}}

<main class="register">
    <!-- Register Page (Only for Guest users) -->
    <section id="register">
        <div class="form">
            <h2>Register</h2>
            <form class="login-form" method="post">
                <input type="text" name="email" id="register-email" placeholder="email" value="{{user.email}}"/>
                <input type="password" name="password" id="register-password" placeholder="password" value="{{user.password}}"/>
                <input type="password" name="rePassword" id="repeat-password" placeholder="repeat password" value="{{user.rePassword}}"/>
                <button type="submit">Register</button>
                <p class="message">Already registered? <a href="/login">Login</a></p>
            </form>
        </div>
    </section>
</main>