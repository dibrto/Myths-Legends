{{setTitle "Myth & Legends - Home"}}

<main class="home">
    <!-- Home page -->
    <section id="home">
        <h1>Welcome to Myth & Legends</h1>
        <h2>From mighty gods to mythical creatures, Myth & Legends offers an exclusive collection of stories and heroes,
            each with its own unique origin and cultural significance.</h2>
    </section>

    <section id="last-added">
        {{#each myths}}
            <div>
                <img src="{{this.image}}">
                <div id="text-content">
                    <p>Name: {{this.name}}</p>
                    <p>Origin: {{this.origin}}</p>
                </div>
                <a class="details-btn" href="/myths/details/{{this.id}}">Details</a>
            </div>
        {{else}}
            <p class="no-post">There are no myths and legends!</p>
        {{/each}}
    </section>
</main>